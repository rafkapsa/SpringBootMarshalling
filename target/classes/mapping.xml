<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
                         "http://castor.org/mapping.dtd">
<mapping>
    
    <description> Provides Mapping to Convert Document to POJO</description>
    
    <class name="com.javasampleapproach.marshalling.model.Text" auto-complete="true">
         
        <map-to xml="text" />
         
        <field name="sentences" type="com.javasampleapproach.marshalling.model.Sentence" collection="arraylist">
             <bind-xml name="sentence" />
        </field>
         
    </class>
    
    <class name="com.javasampleapproach.marshalling.model.Sentence" auto-complete="true">
         
        <map-to xml="sentence" />
         
        <field name="words" type="string" collection="arraylist">
            <bind-xml name="word" node="element" />
        </field>
         
    </class>

</mapping>